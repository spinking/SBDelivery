<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent_orange</item>

        <item name="android:statusBarColor">@color/color_black</item>
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/color_black</item>

        <!--<item name="selectableItemBackground">@color/color_background_test</item>-->

        <!--<item name="selectableItemBackgroundCollapsed">@color/color_background_test</item>-->

        <item name="md_color_button_text">@color/color_accent_yellow</item>

        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="BarsTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!--<item name="colorPrimary">@color/color_article_bar</item>
        <item name="colorOnPrimary">@color/color_on_article_bar</item>
        <item name="colorSurface">@color/color_article_bar</item>
        <item name="colorControlNormal">@color/color_on_article_bar</item>
        <item name="android:textColorHint">@color/color_gray</item>-->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    
    <style name="Title" parent="AppTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumTitle" parent="Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="LightMediumTitle" parent="MediumTitle">
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="HintMediumTitle" parent="MediumTitle">
        <item name="android:textColor">@color/color_label_gray</item>
    </style>



    <style name="Text" parent="AppTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumText" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DarkText" parent="Text">
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

</resources>

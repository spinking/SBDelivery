<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="studio.eyesthetics.sbdelivery.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
    </fragment>

    <navigation
        android:id="@+id/auth"
        app:startDestination="@id/loginFragment"
        android:label="@string/app_name">
        <fragment
            android:id="@+id/loginFragment"
            android:name="studio.eyesthetics.sbdelivery.ui.auth.LoginFragment"
            android:label="LoginFragment" >
            <argument
                android:name="private_destination"
                app:argType="integer"
                android:defaultValue="-1" />
            <action
                android:id="@+id/action_loginFragment_to_recoveryPasswordFragment"
                app:destination="@id/recoveryPasswordFragment" />
            <action
                android:id="@+id/action_loginFragment_to_registrationFragment"
                app:destination="@id/registrationFragment" />
        </fragment>
        <fragment
            android:id="@+id/recoveryCodeFragment"
            android:name="studio.eyesthetics.sbdelivery.ui.auth.RecoveryCodeFragment"
            android:label="RecoveryCodeFragment" >
            <action
                android:id="@+id/action_recoveryCodeFragment_to_recoveryNewPasswordFragment"
                app:destination="@id/recoveryNewPasswordFragment" />
        </fragment>
        <fragment
            android:id="@+id/recoveryNewPasswordFragment"
            android:name="studio.eyesthetics.sbdelivery.ui.auth.RecoveryNewPasswordFragment"
            android:label="RecoveryNewPasswordFragment" >
            <action
                android:id="@+id/action_recoveryNewPasswordFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="false" />
        </fragment>
        <fragment
            android:id="@+id/registrationFragment"
            android:name="studio.eyesthetics.sbdelivery.ui.auth.RegistrationFragment"
            android:label="RegistrationFragment" />
        <fragment
            android:id="@+id/recoveryPasswordFragment"
            android:name="studio.eyesthetics.sbdelivery.ui.auth.RecoveryPasswordFragment"
            android:label="RecoveryPasswordFragment" >
            <action
                android:id="@+id/action_recoveryPasswordFragment_to_recoveryCodeFragment"
                app:destination="@id/recoveryCodeFragment" />
        </fragment>

    </navigation>

    <!--global actions -->
    <action
        android:id="@+id/start_login"
        app:destination="@id/auth"/>
    <action
        android:id="@+id/finish_login"
        app:popUpTo="@id/auth"
        app:popUpToInclusive="true"/>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="studio.eyesthetics.sbdelivery.ui.categories.CategoriesFragment"
        android:label="CategoriesFragment" />
</navigation>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_6dp"/>
                    <solid android:color="@color/color_accent_orange"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_6dp"/>
                    <solid android:color="@color/color_accent_orange_opacity"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
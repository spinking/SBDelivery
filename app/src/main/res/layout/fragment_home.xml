<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cv_logo="http://schemas.android.com/tools"
    android:background="@color/color_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_logo_background"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/standart_margin"
        android:layout_marginEnd="@dimen/standart_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_background"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_background"
            />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationZ="20dp"
        android:elevation="0dp"
        android:background="@drawable/ic_logo_mini"
        app:layout_constraintTop_toTopOf="@id/iv_logo_background"
        app:layout_constraintStart_toStartOf="@id/iv_logo_background"
        app:layout_constraintEnd_toEndOf="@id/iv_logo_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo_background"
        />

    <TextView
        android:id="@+id/btn_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
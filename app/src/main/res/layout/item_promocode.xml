<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    >

    <EditText
        android:id="@+id/et_promo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standart_margin_20dp"
        android:layout_marginStart="@dimen/standart_margin_20dp"
        android:hint="@string/basket_promo_hint"
        android:singleLine="true"
        android:textColorHint="@color/color_hint_gray"
        android:backgroundTint="@color/color_divider_gray_dark"
        style="@style/Text.White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_send_promo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standart_margin_16dp"
        android:layout_marginTop="@dimen/mini_margin_8dp"
        android:layout_marginBottom="@dimen/mini_margin_8dp"
        android:paddingStart="@dimen/mini_margin_14dp"
        android:paddingEnd="@dimen/mini_margin_14dp"
        android:background="@drawable/background_corner_6dp"
        android:backgroundTint="@color/color_divider_gray_dark"
        android:stateListAnimator="@null"
        android:gravity="center"
        android:text="@string/basket_accept"
        style="@style/LightMediumTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
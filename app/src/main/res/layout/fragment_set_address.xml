<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_background">

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/standart_padding"
        android:layout_marginTop="@dimen/maxi_margin_30dp"
        android:layout_marginStart="@dimen/standart_margin_16dp"
        android:layout_marginEnd="@dimen/standart_margin_16dp"
        android:background="@drawable/background_edit_text"
        style="@style/DarkText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/standart_margin_20dp"
        android:layout_marginBottom="@dimen/standart_margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/et_address"
        app:layout_constraintBottom_toTopOf="@id/btn_choice_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_address"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_choice_address"
        style="@style/MediumText.18.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standart_margin_16dp"
        android:layout_marginEnd="@dimen/standart_margin_16dp"
        android:layout_marginBottom="@dimen/standart_margin_16dp"
        android:background="@drawable/filled_button"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/registration_order_register_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
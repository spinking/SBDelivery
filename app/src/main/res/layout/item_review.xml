<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_corner_6dp"
    android:backgroundTint="@color/color_divider_gray_dark">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mini_margin_10dp"
        android:layout_marginTop="@dimen/mini_margin_10dp"
        style="@style/MediumText.White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Екатерина, 19.03.20"
        />

    <RatingBar
        android:id="@+id/rb_rate_user"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mini_margin_14dp"
        android:layout_marginTop="11dp"
        android:numStars="5"
        android:progressBackgroundTint="@android:color/transparent"
        android:progressBackgroundTintMode="multiply"
        android:progressTint="@color/color_accent_orange"
        android:rating="4"
        android:scaleX="-1"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_review_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mini_margin_10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/mini_margin_6dp"
        android:layout_marginBottom="13dp"
        style="@style/LightText.12.Gray"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Великолепная пицца. Мне очень понравилась! Рекомендую всем!"
        />

</androidx.constraintlayout.widget.ConstraintLayout>